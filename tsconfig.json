{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2018",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": [
            "es2018",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "nodes/**/*.ts",
        "credentials/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}